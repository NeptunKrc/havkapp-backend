# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT Authentication
JWT_SECRET=your-super-secret-key-here
JWT_ACCESS_TTL_SECONDS=900
JWT_REFRESH_TTL_DAYS=30
#AUTH MODULE
AUTH_RESET_TOKEN_TTL_MINUTES=15


# QR Module
ALLOWED_QR_TYPES=activity_participation_mandatory,activity_participation_volunteer

# Supabase Storage
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_STORAGE_BUCKET=files

# Files Module
STORAGE_PROVIDER=supabase
FILE_UPLOAD_MAX_SIZE=5242880
FILE_STREAM_THRESHOLD=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain
ORPHAN_TTL_HOURS=24
CLEANUP_BATCH_SIZE=100

# ========== LOGGING (Toggle Switch) ==========
# Master switch - loglamayı aç/kapat
LOGGING_ENABLED=false

# Log seviyesi: silent | error | warn | info | debug
LOG_LEVEL=silent

# Dosyaya log yaz (./logs/app.log)
LOG_TO_FILE=false

# HTTP request'leri logla (performans etkisi var)
LOG_REQUESTS=false

# Renkli console çıktısı (development)
LOG_PRETTY=false

# Better Stack token (opsiyonel, ileride kullanılabilir)
# LOGTAIL_TOKEN=your_token_here